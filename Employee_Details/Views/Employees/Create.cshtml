@model Employee_Details.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1 class="color-text">Create</h1>

<h4 class="color-text">Employee</h4>
<hr />
<div class="row color-text">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenderNavigation.GenderName" class="control-label"></label>
                <select asp-for="GenderNavigation.GenderName" class ="form-control" asp-items="ViewBag.Gender"></select>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesignationNavigation.DesignationName" class="control-label"></label>
                <select asp-for="DesignationNavigation.DesignationName" class="form-control" asp-items="ViewBag.Designation"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary alert-create" />
            </div>
        </form>
    </div>
</div>

